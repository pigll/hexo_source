<% if (post.link){ %>
  <h1 itemprop="name">
    <a class="<%= class_name %>" href="<%- url_for(post.link) %>" target="_blank" itemprop="url"><%= post.title %></a>
  </h1>
<% } else if (post.title){ %>
<style type="text/css">
.my_title_span {
    color: #696969;
    margin-left: 0;
    font-weight: 300;
    line-height: 35px;
    margin-bottom: 20px;
    font-size: 26px;
    transition: color .3s;
}
</style>
  <% if (index){ %>
    <h1 itemprop="name">
      <%if(post.top){%><span class="my_title_span">【置顶】</span><% } %><%if(post.origin){%><span class="my_title_span">【原创】</span><% } %><%if(post.repro){%><span class="my_title_span">【转载】</span><% } %><a class="<%= class_name %>" href="<%- url_for(post.path) %>"><%= post.title %></a>
    </h1>
  <% } else { %>
    <h1 class="<%= class_name %>" itemprop="name">
      <%if(post.top){%><span class="my_title_span">【置顶】</span><% } %><%if(post.origin){%><span class="my_title_span">【原创】</span><% } %><%if(post.repro){%><span class="my_title_span">【转载】</span><% } %><%= post.title %>
    </h1>
  <% } %>
<% } %>