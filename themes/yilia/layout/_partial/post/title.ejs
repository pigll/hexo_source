<% if (post.link){ %>
  <h1 itemprop="name">
    <a class="<%= class_name %>" href="<%- url_for(post.link) %>" target="_blank" itemprop="url"><%= post.title %></a>
  </h1>
<% } else if (post.title){ %>
  <% if (index){ %>
    <h1 itemprop="name">
      <a class="<%= class_name %>" href="<%- url_for(post.path) %>"><%if(post.top){%>【置顶】<% } %><%if(post.origin){%>【原创】<% } %><%if(post.repro){%>【转载】<% } %><%= post.title %></a>
    </h1>
  <% } else { %>
    <h1 class="<%= class_name %>" itemprop="name">
      <%if(post.top){%>【置顶】<% } %><%if(post.origin){%>【原创】<% } %><%if(post.repro){%>【转载】<% } %><%= post.title %>
    </h1>
  <% } %>
<% } %>